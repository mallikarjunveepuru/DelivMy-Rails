<!DOCTYPE html>
<html>
<head>
  <title>DelivMyApp</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= stylesheet_link_tag    'application',params[:controller], media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application',params[:controller], 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
</head>
<body  id="page-top" class="<%= controller_name %> <%= action_name %>">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">DelivMy App</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if current_user %>
            <ul class="nav navbar-nav">
              <li class="page-scroll"><%= link_to "search", 	search_path  %></li>
              <li class="page-scroll"><%= link_to "My Deliv", delivers_path %></li>
              <li class="page-scroll"><%= link_to "My Requests", requests_path	  %></li>
              <li class="page-scroll"><%= link_to "<span><i class='glyphicon glyphicon-plus-sign'></i> Request</span>".html_safe, requests_new_path	  %></li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="hidden">
                <a href="#page-top"></a>
              </li>

              <li class="page-scroll small"><a style="font-size: 70%"><%= current_user.email %></a></li>
              <li class="page-scroll small"><%= link_to "<span><i class='fa fa-user'></i> Profile</span>".html_safe, profile_path %></li>
              <li class="page-scroll small"><%= link_to "<span><i class='glyphicon glyphicon-lock'></i> Log out</span>".html_safe, logout_path, method: "delete" %></li>
            </ul>
        <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li class="hidden">
                <a href="#page-top"></a>
              </li>
              <li class="page-scroll"><%= link_to "Login", 'login' %></li>
              <li class="page-scroll"><%= link_to "Signup", 'signup' %></li>
            </ul>
        <% end %>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

<%= yield %>

</body>
</html>
