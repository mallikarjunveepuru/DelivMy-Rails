<div class="container">
<div class="box box-info">
  <div class="box-header">Submit Request</div>
  <div class="box-body">

    <%= form_for (@request) do |f| %>

        <div class="form-group">
          <%= f.label "Step 1: Select Category" %>
          <%= f.collection_select :CatId, @category, :id, :CatName, :class => 'form-control'%>
        </div>
        <div class="form-group has-feedback">
          <%= f.label "Step 2: Select Place Name" %>
        <%= f.text_field :PlaceName, :class => 'form-control', :placeholder => 'Place Name'	  %>
          <span class="glyphicon glyphicon-plus-sign form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.label "Step 3: Select Location" %>
        <%= f.text_field :LocId, :class => 'form-control', :placeholder => 'Search'	  %>
        <span class="glyphicon glyphicon-map-marker form-control-feedback"></span>
        </div>


        <div class="form-group has-feedback">
          <%= f.label "Step 4: Add Items" %>
          <ul class="list-group">
            <%= f.fields_for :items do |items_form| %>
                <li>
                  <%= render "items_fields", :f => items_form  %>
                </li>
            <% end %>
          </ul>
        </div>


        <%= f.submit "Add Request" %>
    <% end %>

  </div>

</div>

</div>

