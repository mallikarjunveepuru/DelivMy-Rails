<header style="background-color: white; color: black;text-align: left">
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="box box-widget widget-user">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header bg-aqua-active">
          <h3 class="widget-user-username"><%= @user.first_name%> <%= @user.last_name %></h3>
          <h6 class="widget-user-desc"><%= @user.email %></h6>
        </div>
        <div class="widget-user-image">
          <% if @profile.picture.nil? %>
              <%= link_to image_tag('user.jpg', class: "img-circle"), new_uploads_path , class: "userImage img-circle" %>
          <% else %>
              <a class="userImage" href="/uploads/new"><img class="img-circle" src="<%= @profile.picture %>" alt="User Avatar"></a>
          <% end %>
        </div>
          <div class="box-footer">
          <div class="row">
            <div class="col-sm-4 border-right">
              <div class="description-block">
                <h5 class="description-header"><%= link_to @requests, requests_path %></h5>
                <span class="description-text">Requests</span>
              </div>
              <!-- /.description-block -->
            </div>
            <!-- /.col -->
            <div class="col-sm-4 border-right">
              <div class="description-block">
                <h5 class="description-header"><%= link_to @delivers, delivers_path %></h5>
                <span class="description-text">Delivers</span>
              </div>
              <!-- /.description-block -->
            </div>
            <!-- /.col -->
            <div class="col-sm-4">
              <div class="description-block">
                <h5 class="description-header">99%</h5>
                <span class="description-text">Review</span>
              </div>
              <!-- /.description-block -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
          </div>
        </div>

      <h5 style="color: gray">Member since <%= @user.created_at.strftime("%b %Y") %></h5>

      <%= form_for(@profile) do |f| %>
          <div class="form-group has-feedback">
            <%= f.text_field :home, :class => 'form-control',:placeholder => "Work Address" %>
            <span class="glyphicon glyphicon-home form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <%= f.text_field :work, :class => 'form-control',:placeholder => "Home Address" %>
            <span class="glyphicon glyphicon-briefcase form-control-feedback"></span>
          </div>
          <%= f.submit "Update", class: "btn btn-primary btn-block btn-flat" %>
      <% end %>
    </div>
  </div>
</header>